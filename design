    &
   & &
  & & &
 & & & &
& & & & &
rows = int(input("Enter Value :- "))

for i in range(1, rows + 1):
    # print leading spaces
    print(" " * (rows - i), end="")
    # print stars with spaces
    print("& " * i)

 *
 * *
 * * *
 * * * *

rows = int(input("Enter Value :- "))
for i in range(1,rows):
    for j in range(i):
        print(" *",end="")
    print() 
